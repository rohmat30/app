<% include ../layout/head %>

<div class="mb-3 card">
    <div class="card-header">
        <h4 class="card-title"><%=title%></h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <div class="btn-fixed ml-md-4 mt-md-3">
                    <a href="/buku-tamu/tambah" class="btn btn-primary">
                        <i class="mif-user-plus small"></i>
                        <span class="d-none d-md-inline">
                            Tambah
                        </span>
                    </a>
                </div>
            </div>
        </div>
        <% if (locals.simpan) { %>
        <div class="alert alert-success">
            <i class="mif-checkmark"></i>
            <%=simpan%>
        </div>
        <% } %>
        <div class="row font-weight-bold m-0 py-2 py-md-0 d-none d-md-flex">
            <div class="py-0 px-0 col-md-4 col-lg-2">NIK</div>
            <div class="py-0 px-0 col-md-5 col-lg-4">Nama</div>
            <div class="py-0 px-0 d-none d-lg-flex col-lg-4">Alamat</div>
            <div class="py-0 px-0 col-md-3 col-lg-2">Tujuan</div>
        </div>
        <% for (var key in list) { %>
        <div class="ta-list-table">
            <div class="row m-0 py-2 py-md-0">
                <div class="py-0 py-md-2 px-0 order-2 order-md-1 col-12 col-md-4 col-lg-2">
                    <%=list[key].nik%>
                </div>
                <div class="py-0 py-md-2 px-0 order-1 order-md-2 col-12 col-md-5 col-lg-4">
                        <span class="float-right d-none d-md-inline mr-2">
                            <a class="btn btn-sm btn-outline-primary float-right shadow-none d-none-xs icon-action px-1" href="/buku-tamu/edit/<%=list[key].id%>"><i class="mif-pencil"></i></a>
                        </span>
                        
                        <div class="dropdown float-right d-inline-block d-md-none">
                            <a class="shadow-none dropdown-toggle text-dark caret-off" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                                <i class="mif-more-vert mif-lg"></i>
                            </a>
                            <div class="dropdown-menu ta-dropdown-menu dropdown-menu-right">
                                <a href="/buku-tamu/edit/<%=list[key].id%>" class="dropdown-item small"><i class="mif-pencil"></i> Edit</a>
                            </div>
                        </div>
                    <%=list[key].nama_tamu%>
                </div>
                <div class="py-0 py-md-2 order-4 d-none d-lg-flex px-0 col-12 col-lg-4">
                    <%=list[key].alamat_asal%>
                </div>
                <div class="py-0 py-md-2 order-5 px-0 col-12 col-md-3 col-lg-2">
                    <%=list[key].tujuan%>
                </div>
            </div>
        </div>
    <% } %>
    </div>
</div>

<% include ../layout/foot %>
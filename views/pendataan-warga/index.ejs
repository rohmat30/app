<% include ../layout/head %>
<div class="mb-3 card">
    <div class="card-header">
        <h4 class="card-title"><%=title%></h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="btn-fixed ml-md-4 mt-md-3">
                    <a href="/pendataan-warga/tambah-kk" class="btn btn-primary">
                        <i class="mif-plus small"></i>
                        <span class="d-none d-md-inline">
                            Tambah Keluarga
                        </span>
                    </a>
                </div>
            </div>
            <div class="col-md-6 col-lg-5 offset-lg-1  col-xl-3 offset-xl-3">
                <form action="" method="get">
                    <div class="input-group input-search">
                        <input type="text" name="q" class="form-control" placeholder="Pencarian...">
                        <div class="input-group-append">
                            <button type="submit" class="btn shadow-none">
                                <i class="mif-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-3">
            <% for(var i in data) { %>
            <div class="col-sm-6 col-xl-4">
                <div class="media ta-list mb-sm-3 py-3 p-sm-2 clearfix">
                    <div class="ta-thumb m-sm-1 mr-2 mr-sm-2 align-self-top p-2 p-sm-3">
                        <i class="mif-users thumb mif-2x"></i>
                    </div>
                    <div class="media-body mb-0 mt-sm-1">
                        <h5 class="mb-0 ta-list-title">
                            
                            <a href="/pendataan-warga/anggota-keluarga/<%=data[i].id_keluarga%>" class="d-block">
                                <%=data[i].nomor_kk%>
                            </a>
                        </h5>
                        <p class="small mb-0">
                            <%=data[i].jumlah_anggota%> Anggota
                            <span class="badge badge-<%=data[i].status_tinggal == 'tetap'?'primary':'secondary'%>">
                                <%=data[i].status_tinggal%>
                            </span>
                        </p>
                        <p class="ta-list-tags mb-0 small">
                            <%=data[i].jumlah_anggota?data[i].nama_keluarga.split(',').join(', '):'Tidak ada'%>
                        </p>
                    </div>
                    <div class="dropdown ta-list-more">
                        <a class="shadow-none dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                            <i class="mif-more-vert mif-lg"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="/pendataan-warga/anggota-keluarga/<%=data[i].id_keluarga%>">Lihat</a>
                            <a class="dropdown-item" href="/pendataan-warga/ubah-kk/<%=data[i].id_keluarga%>">Ubah</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
<% include ../layout/foot %>